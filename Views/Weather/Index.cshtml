@model AccuWeather.Models.WeatherData

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Accu Weather</title>
</head>
<body>

<h2>This is the weather</h2>

<form asp-controller="Weather" asp-action="Create">
 <div class="form-vertical">
    <div class="form-group">
        <label asp-for="Place" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
 </div>
</form>  

<div>@Model.Main.Temperature</div>
<div>@Model.Main.TempMax</div>
<div>@Model.Main.TempMin</div>

</body>
</html>